<html>
  <head>
    <title>Chitter</title>
  </head>
  <body>
    <h1>Chitter</h1>
    <form action="/" method="POST">
      <input type="text" placeholder="What's on your mind?" name="peep">
      <input type="submit" value="Send">
    </form>
    <% @peeps.each do |peep| %>
      <div>
        <strong><%= peep.author_name %></strong> - <%= peep.author_username %><br>
        <%= peep.content %><br>
        <%= peep.date %>, <%= peep.time %>
      </div>
    <% end %>
  </body>
</html>
